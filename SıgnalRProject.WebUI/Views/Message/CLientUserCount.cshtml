@{
    Layout = null;
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/microsoft/signalr/dist/browser/signalr.min.js"></script>


<!DOCTYPE html>
<html>

<partial name="_UILayoutPartial/_UILayoutHeadPartial"></partial>

<body class="sub_page">

    <partial name="_MenuNavbarPartial"></partial>

    <section class="food_section layout_padding">
        <div class="container">


            <script type="text/javascript">

                $(document).ready(() => {

                    var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7024/SignalRHub").build();
                    $("#connstatus").text(connection.state);
                    connection.start().then(() => {
                        $("#connstatus").text(connection.state);
                    }).catch((err) => { console.log(err) });


                    connection.on("ReceiveClientCount", (clientCount) => {
                        $("#clientCountValue").text(clientCount);
                    });

                });

            </script>

            <h4 class="page-title">Anlık Client Sayısı: <strong id="clientCountValue"></strong></h4>



        </div>

    </section>

    @await Component.InvokeAsync("_UILayoutFooter")

    <partial name="_UILayoutPartial/_UILayoutScriptPartial"></partial>


</body>

</html>


