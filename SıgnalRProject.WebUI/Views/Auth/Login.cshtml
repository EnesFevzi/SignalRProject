@model UserLoginDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V2</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Login_v2/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v2/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v2/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v2/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v2/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v2/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v2/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v2/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v2/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v2/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Login_v2/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

	<div class="limiter">
		<div class="container-login100" style="background-image: url('/Login_v2/images/bg-012.jpg'); background-size: cover; background-position: center; width: 100%; height: 500px;">
			<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
				<form asp-controller="Auth" asp-action="Login" class="login100-form validate-form">
					<span class="login100-form-title p-b-49">
						E & F RESTAURANT
					</span>
					<div asp-validation-summary="All" class="text-danger"></div>
					<div class="wrap-input100 validate-input m-b-23" data-validate="Email Gereklidir">
						<span class="label-input100">Username</span>
						<input asp-for="Email" class="input100" type="text" name="email" placeholder="Mail Adresini Giriniz">
						<span asp-validation-for="Email" class="focus-input100" data-symbol="&#xf206;"></span>
					</div>

					<div class="wrap-input100 validate-input" data-validate="Parola Gereklidir">
						<span class="label-input100">Password</span>
						<input asp-for="Password" class="input100" type="password" name="password" placeholder="Şifrenizi Giriniz">
						<span asp-validation-for="Password" class="focus-input100" data-symbol="&#xf206;"></span>

					</div>

					<br />
					<div class="form-check" aria-label="Basic checkbox toggle button group">
						<input type="checkbox" class="btn-check" asp-for="RememberMe" id="btncheck1" autocomplete="off">
						<label class="form-check-label label-input100" asp-for="RememberMe" for="btncheck1">Beni Hatırla</label>
					</div>
					@* <div class="check">
					<span class="label-input100">Beni Hatırla</span>
					<input class="input-checkbox100" asp-for="RememberMe" type="checkbox" id="remember-me">
					<label class="label-checkbox100" asp-for="RememberMe" for="remember-me" style="color:white">
					Beni Hatırla
					</label>
					</div> *@

					<div class="text-right p-t-8 p-b-31">
						<a class="txt1" asp-action="ForgetPassword" asp-controller="ResetPassword" asp-area=" ">
							Şifremi Unuttum
						</a>
					</div>
					<div class="container-login100-form-btn">
						<div class="wrap-login100-form-btn">
							<div class="login100-form-bgbtn"></div>
							<button class="login100-form-btn">
								Giriş Yap
							</button>
						</div>
					</div>
					<div class="flex-col-c p-t-155">
						<span class="txt1 p-b-17">
							Hesabınız Yok Mu ?
						</span>
						<div class="container-login100-form-btn">
							<div class="wrap-login100-form-btn">
								<div class="login100-form-bgbtn"></div>
								<a asp-action="Register" asp-controller="Auth" class="login100-form-btn">
									Kayıt Ol
								</a>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>


    <div id="dropDownSelect1"></div>
    <!--===============================================================================================-->
    <script src="~/Login_v2/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login_v2/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login_v2/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Login_v2/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login_v2/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login_v2/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Login_v2/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login_v2/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login_v2/js/main.js"></script>
</body>
</html>